{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "amount": {
      "type": "decimal",
      "required": true
    },
    "buktiTransferImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "reportedDate": {
      "type": "datetime",
      "required": true
    },
    "transactionDate": {
      "type": "datetime",
      "required": true
    },
    "statusTransaksi": {
      "type": "enumeration",
      "required": true,
      "default": "Pending",
      "enum": [
        "Pending",
        "Confirmed",
        "Rejected"
      ]
    },
    "reportedByUser": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "confirmedByUser": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "transactions"
    },
    "payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment.payment"
    },
    "periode": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::periode.periode"
    }
  }
}
